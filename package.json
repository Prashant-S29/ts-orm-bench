{
  "name": "drizzle-vs-prisma",
  "version": "1.0.0",
  "description": "Benchmark comparing Prisma and Drizzle ORM",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "tsc",
    "preflight": "tsx src/scripts/preflight.ts",
    "db:setup": "docker-compose up -d && sleep 10 && docker exec orm-benchmark-db psql -U benchmark -d benchmark -c 'CREATE EXTENSION IF NOT EXISTS pg_stat_statements;'",
    "db:generate": "pnpm prisma generate --schema=src/orms/prisma/schema.prisma",
    "test": "tsx src/index.ts"
  },
  "dependencies": {
    "drizzle-orm": "^1.0.0-beta.2",
    "@prisma/client": "^7.1.0",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "drizzle-kit": "^0.20.0",
    "prisma": "^7.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "chalk": "^5.3.0"
  }
}
