{
  "name": "ts-orm-bench",
  "version": "1.0.0",
  "description": "Benchmark comparing different TS ORMs",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "tsc",
    "preflight": "tsx src/scripts/preflight.ts",
    "db:setup": "docker-compose up -d && sleep 10 && docker exec orm-benchmark-db psql -U benchmark -d benchmark -c 'CREATE EXTENSION IF NOT EXISTS pg_stat_statements;'",
    "db:schema": "tsx src/database/setup-schema.ts",
    "db:generate": "prisma generate --schema=src/orms/prisma/schema.prisma",
    "db:push": "prisma db push --schema=src/orms/prisma/schema.prisma",
    "db:seed": "tsx src/scripts/seed-data.ts",
    "test": "tsx src/index.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^1.0.0-beta.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "chalk": "^5.3.0",
    "drizzle-kit": "^0.20.0",
    "prisma": "^7.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
