{
  "name": "ts-orm-bench",
  "version": "1.0.0",
  "description": "Benchmark comparing different TS ORMs",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "tsc",
    "preflight": "tsx src/scripts/preflight.ts",
    "validate:config": "tsx src/scripts/validate-config.ts",
    "db:setup": "docker-compose up -d && sleep 10 && docker exec orm-benchmark-db psql -U benchmark -d benchmark -c 'CREATE EXTENSION IF NOT EXISTS pg_stat_statements;'",
    "db:schema": "tsx src/database/setup-schema.ts",
    "db:generate": "npm run db:generate:prisma-7 && npm run db:generate:prisma-6",
    "db:generate:prisma-7": "prisma generate --schema=src/orms/prisma/v7.1.0/schema.prisma",
    "db:generate:prisma-6": "cd src/orms/prisma/v6.19.0 && pnpm install && pnpm exec prisma generate",
    "db:push": "npm run db:push:prisma-7",
    "db:push:prisma-7": "prisma db push --schema=src/orms/prisma/v7.1.0/schema.prisma",
    "db:push:prisma-6": "cd src/orms/prisma/v6.19.0 && pnpm exec prisma db push",
    "db:seed": "tsx src/scripts/seed-data.ts",
    "test": "tsx src/index.ts",
    "test:scenario": "tsx src/index.ts scenario",
    "test:orm": "tsx src/index.ts orm",
    "results:generate": "tsx src/scripts/generate-results.ts",
    "generate-results": "tsx src/scripts/generate-results.ts",
    "aggregate": "tsx src/scripts/aggregate-results.ts",
    "compare": "tsx src/scripts/compare-runs.ts",
    "cleanup": "tsx src/scripts/cleanup-storage.ts",
    "generate-markdown": "tsx src/scripts/generate-markdown-results.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "cli-table3": "^0.6.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^1.0.0-beta.2",
    "drizzle-orm-0-45": "npm:drizzle-orm@0.45.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "chalk": "^5.3.0",
    "drizzle-kit": "^0.20.0",
    "prisma": "^7.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
